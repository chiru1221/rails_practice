<p id="notice"><%= notice %></p>

<h1>Users</h1>

<h2 class='link'><%= link_to 'Books', books_path %></h2>
<h2 class='link'><%= link_to 'Reviews', reviews_path %></h2>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Name</th>
      <th>Role</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.userid %></td>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= user.email %></td>
        <td class='link'><%= link_to 'Show', user %></td>
        <% if @current_user&.id == user.id %>
          <td class='link'><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
        <% if @current_user&.admin? || user.id == @current_user&.id %>
          <td class='link'><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

