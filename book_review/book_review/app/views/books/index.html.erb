<p id="notice"><%= notice %></p>

<h1>Books</h1>

<h2 class='link'><%= link_to 'Reviews', reviews_path %></h2>

<% if @current_user&.admin? %>
  <h2 class='link'><%= link_to 'Users', users_path %></h2>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.publisher %></td>
        <td><%= book.description %></td>
        <td class='link'><%= link_to 'review', reviews_path %></td>
        <td class='link'><%= link_to 'Show', book %></td>
        <% if @current_user&.reviewer? %>
          <td class='link'><%= link_to 'Edit', edit_book_path(book) %></td>
        <% end %>
        <% if @current_user&.admin? %>
          <td class='link'><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @current_user %>
  <div class='link'><%= link_to 'New Book', new_book_path %></div>
<% end %>
